<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="UI.Activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/website_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_marginLeft="130dp"
            android:text="INSTRUCTIONS:"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background=""/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/website_instruction"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="25dp"
            android:padding="2dp">

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="25dp"
                android:text=" 1.Total Questions = 50.\n\n2.Each question carries 1 mark.\n\n3.Each test is of 50 marks, 1 marks per
             each question.\n\n 4.Multiple choice questions with only
      ONE valid answer.\n\n5.Click on the arrow button to load the
        next question.\n\n6.Your score and ratings will be
     displayed at the end of the test!."
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="italic" />
        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/insdash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="155dp"
            android:background="@drawable/gradient"
            android:text="Go To Dashboard"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>